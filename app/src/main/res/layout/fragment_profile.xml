<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="loginVM"
            type="com.example.aldokana.viewModels.ProfileFragmentViewModel" />
    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/frame_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_rounded"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_15sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_15sdp">

                <FrameLayout
                    android:id="@+id/notifications"
                    android:layout_weight="1"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_20sdp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/bell"
                        android:layout_marginStart="@dimen/_2sdp"/>

                    <FrameLayout
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="@dimen/_12sdp">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/_12sdp"
                            android:layout_height="@dimen/_12sdp"
                            android:src="@drawable/circ"
                            />

                        <com.example.aldokana.MyTextViewCairo
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@={loginVM.notificationsNum}"
                            android:textSize="@dimen/_6ssp"
                            android:textColor="@color/white"/>


                    </FrameLayout>



                </FrameLayout>
                <com.example.aldokana.MyTextViewCairo
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/my_profile"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="@dimen/_14ssp"
                    android:textColor="@color/black"/>
                <FrameLayout
                    android:id="@+id/choose_language"
                    android:layout_weight="1"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_centerVertical="true">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:src="@drawable/langimg"
                        />

                    <com.example.aldokana.MyTextViewCairo
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="@dimen/_8ssp"
                        android:text="@string/en"
                        android:textColor="@color/white"/>


                </FrameLayout>


            </RelativeLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:src="@drawable/circleprofileimg"
                android:id="@+id/profile_image"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_15sdp"/>

            <com.example.aldokana.MyTextViewCairo
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@{loginVM.name}"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_10sdp"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="@dimen/_10sdp">

                <com.example.aldokana.MyTextViewCairo
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_10ssp"
                    android:text="@string/wallet"
                    android:textColor="@color/black"/>

                <com.example.aldokana.MyTextViewCairo
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_10ssp"
                    android:text="0"
                    android:textColor="@color/mooov"
                    android:layout_marginStart="@dimen/_5sdp"/>

                <com.example.aldokana.MyTextViewCairo
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_10ssp"
                    android:text="@string/egp"
                    android:textColor="@color/mooov"
                    android:layout_marginStart="@dimen/_5sdp"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.core.widget.NestedScrollView
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <RelativeLayout
                    android:id="@+id/edit_profile_txt"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:background="@drawable/shape_white2"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp">

                    <com.example.aldokana.MyTextViewCairo
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/edit_profile"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:textSize="@dimen/_10ssp"
                        android:textColor="@color/black"
                        android:layout_marginStart="@dimen/_15sdp"/>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/editprofile"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_15sdp"/>


                </RelativeLayout>

                <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/promo_code"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:background="@drawable/shape_white2"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp">

                    <com.example.aldokana.MyTextViewCairo
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/promo_code"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:textSize="@dimen/_10ssp"
                        android:textColor="@color/black"
                        android:layout_marginStart="@dimen/_15sdp"/>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ramz"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_15sdp"/>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/my_addresses"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:background="@drawable/shape_white2"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp">

                    <com.example.aldokana.MyTextViewCairo
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/my_addresses"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:textSize="@dimen/_10ssp"
                        android:textColor="@color/black"
                        android:layout_marginStart="@dimen/_15sdp"/>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_navigate_next_24"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_15sdp"/>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/question_and_answer"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:background="@drawable/shape_white2"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp">

                    <com.example.aldokana.MyTextViewCairo
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/question_and_answer"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:textSize="@dimen/_10ssp"
                        android:textColor="@color/black"
                        android:layout_marginStart="@dimen/_15sdp"/>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_navigate_next_24"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_15sdp"/>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/about_app"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:background="@drawable/shape_white2"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp">

                    <com.example.aldokana.MyTextViewCairo
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/about_the_application"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:textSize="@dimen/_10ssp"
                        android:textColor="@color/black"
                        android:layout_marginStart="@dimen/_15sdp"/>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_navigate_next_24"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_15sdp"/>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/policy"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:background="@drawable/shape_white2"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp">

                    <com.example.aldokana.MyTextViewCairo
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/privacy_policy"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:textSize="@dimen/_10ssp"
                        android:textColor="@color/black"
                        android:layout_marginStart="@dimen/_15sdp"/>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_navigate_next_24"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_15sdp"/>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/terms_and_conditions"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:background="@drawable/shape_white2"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp">

                    <com.example.aldokana.MyTextViewCairo
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/terms_and_conditions"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:textSize="@dimen/_10ssp"
                        android:textColor="@color/black"
                        android:layout_marginStart="@dimen/_15sdp"/>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_navigate_next_24"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_15sdp"/>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/call_us"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:background="@drawable/shape_white2"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp">

                    <com.example.aldokana.MyTextViewCairo
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/call_us"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:textSize="@dimen/_10ssp"
                        android:textColor="@color/black"
                        android:layout_marginStart="@dimen/_15sdp"/>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_navigate_next_24"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_15sdp"/>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:background="@drawable/shape_white2"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp">

                    <com.example.aldokana.MyTextViewCairo
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/share_the_app"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:textSize="@dimen/_10ssp"
                        android:textColor="@color/black"
                        android:layout_marginStart="@dimen/_15sdp"/>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/sharee"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_15sdp"/>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/logout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:background="@drawable/shape_white2"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp">

                    <com.example.aldokana.MyTextViewCairo
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/disengage_the_device"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:textSize="@dimen/_10ssp"
                        android:textColor="@color/red"
                        android:layout_marginStart="@dimen/_15sdp"/>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/exit"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_15sdp"/>


                </RelativeLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_15sdp"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.core.widget.NestedScrollView>
    </androidx.appcompat.widget.LinearLayoutCompat>


</layout>