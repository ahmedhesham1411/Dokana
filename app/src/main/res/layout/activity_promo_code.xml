<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="loginVM"
            type="com.example.aldokana.viewModels.ProfileFragmentViewModel" />
    </data>
<androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.PromoCodeActivity"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:orientation="horizontal"
        android:background="@color/white">

        <FrameLayout
            android:layout_weight="1"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_15sdp">

        </FrameLayout>
        <com.example.aldokana.MyTextViewCairo
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/promo_code"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="@dimen/_14ssp"
            android:textColor="@color/black"/>

        <FrameLayout
            android:id="@+id/back"
            android:layout_weight="1"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_centerVertical="true">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:src="@drawable/ic_baseline_keyboard_backspace_24"
                android:rotation="180"/>


        </FrameLayout>


    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:src="@drawable/couponimg"
        android:layout_gravity="center"/>

    <com.example.aldokana.MyTextViewCairo
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/promo_code"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="@dimen/_10ssp"
        android:textColor="@color/black"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linear_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="@drawable/shape_rounded_grey"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_25sdp"
        android:orientation="horizontal">

        <com.example.aldokana.MyTextViewCairo
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#5FCB97"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <com.example.aldokana.MyTextViewCairo
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_40sdp"
        android:layout_marginEnd="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:text="@string/disc"
        android:gravity="center"
        android:textSize="@dimen/_12ssp"/>

    <RelativeLayout
        android:layout_width="@dimen/_130sdp"
        android:layout_height="@dimen/_35sdp"
        android:background="@drawable/shape_rounded_moov"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_40sdp">


        <com.example.aldokana.MyTextViewCairo
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/share"
            android:textSize="@dimen/_14ssp"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:id="@+id/ddd"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/shareeeeeeee"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/ddd"
            android:layout_marginStart="@dimen/_15sdp"/>



    </RelativeLayout>


    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>