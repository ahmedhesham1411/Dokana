<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="loginVM"
            type="com.example.aldokana.viewModels.EditProfileViewModel" />
    </data>
<androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:orientation="horizontal"
        android:background="@color/white">

        <FrameLayout
            android:layout_weight="1"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_15sdp">

        </FrameLayout>
        <com.example.aldokana.MyTextViewCairo
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/edit_profile"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="@dimen/_14ssp"
            android:textColor="@color/black"/>

        <FrameLayout
            android:id="@+id/back"
            android:layout_weight="1"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_centerVertical="true">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:src="@drawable/ic_baseline_keyboard_backspace_24"
                android:rotation="180"/>


        </FrameLayout>


    </RelativeLayout>

    <FrameLayout
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_imageeee"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_120sdp"
            />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_80sdp"
            android:layout_marginLeft="@dimen/_80sdp"
            android:background="@drawable/my_shape"
            android:id="@+id/choose_img">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_edit_black_24dp"
                android:layout_gravity="center"/>
        </FrameLayout>



    </FrameLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linear_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="@drawable/shape_rounded_grey"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_25sdp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/profileimg"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_10sdp"
            android:id="@+id/profile_img"
            android:backgroundTint="@color/colorTextHint"/>


        <com.example.aldokana.MyEditTextBold
            android:maxLines="1"
            android:textAlignment="viewStart"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:background="@android:color/transparent"
            android:paddingStart="@dimen/_10sdp"
            android:id="@+id/name_txt"
            android:textSize="@dimen/_14ssp"
            android:drawablePadding="@dimen/_10sdp"
            android:hint="@string/full_name"
            android:text="@{loginVM.name}"
            android:inputType="text"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linear_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="@drawable/shape_rounded_grey"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_25sdp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/phone"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_10sdp"
            android:id="@+id/phone_img"
            android:backgroundTint="@color/colorTextHint"/>

        <com.example.aldokana.MyEditTextBold
            android:textAlignment="viewStart"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:background="@android:color/transparent"
            android:paddingStart="@dimen/_10sdp"
            android:id="@+id/phone_txt"
            android:textSize="@dimen/_14ssp"
            android:text="@{loginVM.phone}"
            android:drawablePadding="@dimen/_10sdp"
            android:hint="@string/phoe_num"
            android:inputType="phone"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linear_email"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="@drawable/shape_rounded_grey"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_25sdp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/emailicon"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_10sdp"
            android:id="@+id/email_img"
            android:backgroundTint="@color/colorTextHint"/>


        <com.example.aldokana.MyEditTextBold
            android:textAlignment="viewStart"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:background="@android:color/transparent"
            android:paddingStart="@dimen/_10sdp"
            android:id="@+id/email_txt"
            android:textSize="@dimen/_14ssp"
            android:drawablePadding="@dimen/_10sdp"
            android:hint="@string/email_optional"
            android:maxLines="1"
            android:text="@{loginVM.email}"
            android:inputType="textEmailAddress"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <com.example.aldokana.MyButtonBold
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginTop="@dimen/_50sdp"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_30sdp"
        android:background="@drawable/shape_rounded_g"
        android:text="@string/edit"
        android:id="@+id/edit"
        android:textColor="@color/white"
        android:textAllCaps="false"/>
</androidx.appcompat.widget.LinearLayoutCompat>
</layout>