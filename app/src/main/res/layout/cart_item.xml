<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_110sdp"
        android:background="@drawable/shape_rounded_white"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        >

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_10sdp">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/phineimg222"
                android:scaleType="fitXY"
                />

        </RelativeLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_width="@dimen/_170sdp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_15sdp">

            <com.example.aldokana.MyTextViewCairo
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OnePlus"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"/>

            <com.example.aldokana.MyTextViewCairo
                android:id="@+id/disc"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:textAlignment="viewStart"
                android:maxLines="2"
                android:text="OnePlus 6 Dual Sim, 128GB, 4G LTE Black"
                android:textColor="@color/black"
                android:gravity="center"
                android:textSize="@dimen/_8ssp"
                tools:ignore="RtlCompat" />


            <RelativeLayout
                android:layout_width="@dimen/_100sdp"
                android:layout_height="match_parent"
                >

                <RelativeLayout
                    android:layout_centerVertical="true"
                    android:id="@+id/layout_plus_minus"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_25sdp"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingBottom="@dimen/_2sdp"
                    android:background="@drawable/shape_border2"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_3sdp">

                    <RelativeLayout
                        android:id="@+id/plus_lay"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        >

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:id="@+id/plus"
                            android:src="@drawable/inactiveplus"/>

                    </RelativeLayout>


                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:src="@drawable/shape_circle_red"/>

                        <com.example.aldokana.MyTextViewCairo
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="@dimen/_6ssp"
                            android:textColor="@color/white"
                            android:text="0"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:id="@+id/counter_txt"/>

                    </FrameLayout>

                    <RelativeLayout
                        android:id="@+id/minus_lay"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        >

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:id="@+id/minus"
                            android:src="@drawable/inactiveminus"/>
                    </RelativeLayout>


                </RelativeLayout>


            </RelativeLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginStart="@dimen/_15sdp">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_alignParentTop="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_alignParentEnd="true">

                <com.example.aldokana.MyTextViewCairo
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_15sdp"
                    android:text="58"
                    android:maxLines="1"
                    android:layout_gravity="center"
                    android:gravity="center|end"
                    android:textColor="@color/red"
                    android:textSize="@dimen/_7ssp"/>

                <com.example.aldokana.MyTextViewCairo
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:text="@string/egp"
                    android:maxLines="1"
                    android:textColor="@color/red"
                    android:textSize="@dimen/_7ssp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/_3sdp"/>


            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/delete"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/_15sdp"
                android:id="@+id/delete_item_cart"
                android:layout_marginBottom="@dimen/_15sdp"/>

        </RelativeLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>